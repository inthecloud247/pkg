# Contributor: Eivind Uggedal <eivind@uggedal.com>

pkgname=phantomjs
pkgver=1.5.0
pkgrel=2
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license=("BSD")
arch=('x86_64')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}-linux-x86_64-dynamic.tar.gz")
md5sums=('ef750b05545a9340d6f860b669616f0c')

package() {
  install -D -m755 $srcdir/$pkgname/bin/$pkgname $pkgdir/usr/local/bin/$pkgname
  install -d $pkgdir/usr/local/lib
  cp -r $srcdir/$pkgname/lib $pkgdir/usr/local
}

